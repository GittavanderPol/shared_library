<div class="row justify-content-center">
  <div class="col-8 col-md-6 col-lg-4 col-xl-3">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-3">
        <%= f.label :password, "New password", class: "form-label mb-0" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mt-2" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions my-2 d-grid">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
